{% block title %}Accueil{% endblock %}

{% block content %}
<!-- partial:index.partial.html -->
<main class="main-content">
  <section class="slideshow">
    <div class="slideshow-inner">
      <div class="slides">
      {% set i = 0 %}
        {% for mariage in mariages %}
          <div class="slide {{ (i == 0) ? 'is-active' : '' }}">
          <div class="slide-content">
            <div class="caption">
              <div class="title acc_size_title">{{ mariage.nom_homme }} & {{ mariage.nom_femme }}</div>
              <div class="text">
                <p>Vive les mariées</p>
              </div> 
              <a href="#" class="btn">
                <span class="btn-inner">Prochain Mariage</span>
              </a>
            </div>
          </div>
          <div class="image-container" style="background-image: url({{asset('plugs/photo/albums/' ~ mariage.photo_mariee )}})"> 
            {# <img src="{{asset('plugs/photo/albums/' ~ mariage.PhotoMariee )}}" alt="" class="image" /> #}
          </div>
        </div>
        {% set i = i + 1 %}
        {% endfor %}
      </div>
      <div class="pagination">
        <div class="item is-active"> 
          <span class="icon">1</span>
        </div>
        <div class="item">
          <span class="icon">2</span>
        </div> 
        <div class="item">
          <span class="icon">3</span>
        </div>
        <div class="item">
          <span class="icon">4</span>
        </div>
      </div>
      <div class="arrows">
        <div class="arrow prev">
          <span class="svg svg-arrow-left">
            <svg version="1.1" id="svg4-Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="14px" height="26px" viewBox="0 0 14 26" enable-background="new 0 0 14 26" xml:space="preserve"> <path d="M13,26c-0.256,0-0.512-0.098-0.707-0.293l-12-12c-0.391-0.391-0.391-1.023,0-1.414l12-12c0.391-0.391,1.023-0.391,1.414,0s0.391,1.023,0,1.414L2.414,13l11.293,11.293c0.391,0.391,0.391,1.023,0,1.414C13.512,25.902,13.256,26,13,26z"/> </svg>
            <span class="alt sr-only"></span>
          </span>
        </div>
        <div class="arrow next">
          <span class="svg svg-arrow-right">
            <svg version="1.1" id="svg5-Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="14px" height="26px" viewBox="0 0 14 26" enable-background="new 0 0 14 26" xml:space="preserve"> <path d="M1,0c0.256,0,0.512,0.098,0.707,0.293l12,12c0.391,0.391,0.391,1.023,0,1.414l-12,12c-0.391,0.391-1.023,0.391-1.414,0s-0.391-1.023,0-1.414L11.586,13L0.293,1.707c-0.391-0.391-0.391-1.023,0-1.414C0.488,0.098,0.744,0,1,0z"/> </svg>
            <span class="alt sr-only"></span>
          </span>
        </div>
      </div>
    </div> 
  </section>
</main>
<!-- partial --> 
<div class="w-100 p-3 owl-carousel carouselInv container-fluid fond-inv">
{% for invitation in invitations %}
  <div class="inv m-3 ml-auto row mr-auto">
      <div class="col-md-5 d-flex align-items-center justify-content-center">
        <div class="b-profil d-flex align-items-center justify-content-center" style="background-image:url({{ asset("plugs/perso/images/fond_invitation.png") }})">
          <img src="{{ asset("plugs/photo/albums/" ~ invitation.PhotoMariee ) }}" class="img img-circle inv-image">
        </div>
        
      </div>
      <div class="col-md-7 lettre_inv p-3 text-center">
        <h1 class="font-Maiandra font-italic color-wedding">{{ invitation.nomMariees }}</h1>
        <p class="font-wedding h4 mot-inv">{{ invitation.motInvitation|raw }}</p>
      </div>
  </div>
{% endfor %}
</div>
<div class="text-center p-3">
      <h2 class="font-Great color-title font-weight-bold" >Albums</h2>
      <hr>
        <div class="owl-carousel px-5 py-0  pb-2 owl-2">

           {% if albums is not empty or albums is not null   %}
            {% for album in albums %}
                {% for attache in album.attachements %}
                    {% set extension = attache.Image|split('.') %}
                    {% if extension[1] in extensionImage %}
                      <div class="media-29101">
                            <a href="{{asset('plugs/photo/albums/' ~ attache.Image)}}" data-lightbox="album" data-title="{{ album.Date |date('d M Y') }}">
                                <img src="{{asset('plugs/photo/albums/' ~ attache.Image)}}" alt="" class="img img-thumbnail acc_image_album img-fluid">
                            </a>       
                      </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}  
          {% endif %}
        </div>
        <h2 class="font-Great color-title font-weight-bold" >Vidéos</h2>
      <hr>
      <div class="featured-carousel px-5 py-0 owl-carousel">
       
            {% if videos is not empty or videos is not null   %}
              {% for video in videos %}
                  {% for attacheV in video.attachementVideos %}
                      {% set videoUrl = attacheV.url|split('watch?v=') %}
                       <div class="item">
                      {% if videoUrl|length > 0  %}
                          <div class="w-100" style="height: 250px">
                          <div class="monElement" style="height: 250px">
                              <iframe
                                  class="w-100" style="height: 250px"
                                  src="{{videoUrl[0] ~ 'embed/' ~ videoUrl[1]}}"
                                  allow="encrypted-media; gyroscope;"
                                  allowfullscreen>
                              </iframe>
                          </div>
                      </div>
                      {% else %}
                      <div class="w-100" style="height: 250px">
                          <div class="monElement" style="height: 250px">
                              <iframe
                                  class="w-100" style="height: 250px"
                                  src="{{videoUrl[0]}}"
                                  allow="encrypted-media; gyroscope;"
                                  allowfullscreen>
                              </iframe>
                          </div>
                      </div>
                      {% endif %}
                    </div>
                  {% endfor %}
              {% endfor %}  
            {% endif %}
          
			</div>
      <h2 class="font-Great color-title font-weight-bold" >Audio</h2>
      <hr>
      <div class="gtco-testimonials px-3 py-0">
      <div class="owl-carousel owl-carousel1 owl-theme">
       {% if albums is not empty %}
        {% for album in albums %}
            {% for attache in album.attachements %}
                {% set extension = attache.Image|split('.') %}
                {% if extension[1] in extensionAudio %}
                <div>
                  <div class="card text-center"><img class="card-img-top" src="{{asset('plugs/audio/audio-1.jpeg')}}" alt="">
                    <div class="card-body">
                      <h5 class="lh-3">{{ album.Date |date('d/m/Y') }}<br />
                        <span>
                          <audio
                              controls
                              src="{{asset('plugs/photo/albums/' ~ attache.Image)}}" class="w-100">
                              <a href="{{asset('plugs/photo/albums/' ~ attache.Image)}}">
                                Download audio
                              </a>
                          </audio>
                          </span>
                      </h5>
                    </div>
                  </div>
                </div>  
                {% endif %}
            {% endfor %}
        {% endfor %}  
    {% endif %}
      </div>
  </div>
 
  <h2 class="font-Great color-title font-weight-bold">Boutiques</h2>
  <hr>
  <div class="px-5 pt-0 pb-2">
  <div class="owl-carousel boutique_owl">
  {% for boutique in boutiques %}
        <div class="product-wrapper border rounded text-center"> 
            <div class="product-img">
            <a href="#" data-abc="true"> <img src="{{asset('plugs/photo/albums/' ~ boutique.Image)}}" alt=""> </a>
            <span class="text-center">{{ boutique.IdPrix }}&nbsp;KMF</span>
                <div class="product-action mb-3"> 
                    <div class="product-action-style rounded">
                    <a href="#">{{ boutique.Nom }}</a>
                        <a href="#" class="ajout_panier" value="{{ boutique.id }}"><i class="fa fa-shopping-cart"></i></a>
                    </div>
                </div>
            </div>
        </div>
  {% endfor %}
  </div>
  <div class="w-100  mt-3">
    <a href="{{path('app_boutiques')}}" class="btn btn-outline-danger pl-5 p-2 pr-5 voir-plus " >Voir plus</a>
  </div>
</div>
  <h2 class="font-Great color-title font-weight-bold">Prestations</h2>
  <hr>
  <div class="px-5 pt-0 pb-2">
      <div class="owl-carousel prestations_owl" >
        {% for prestation in prestations %}
                <div class="card-sl m-2">
                    <div class="card-image">
                        <img src="{{asset('plugs/photo/albums/' ~ prestation.Image)}}" />
                    </div>
                    {# <a class="card-action" href="#"><i class="fa fa-heart"></i></a> #}
                    <div class="card-heading">
                        {{ prestation.Nom }}
                    </div>
                    <a href="{{path('app_detailPrest',{'idPrestation':prestation.id})}}" class="card-button"> Voir les tarifs</a>
                </div>
        {% endfor %}
        </div>
  <div class="w-100  mt-3">
    <a href="{{path('app_prestations')}}" class="btn btn-outline-danger pl-5 p-2 pr-5 voir-plus " >Voir plus</a>
  </div>
  </div>
  

</div>
{% endblock %}

