{% extends 'base.html.twig' %}

{% block title %}Détails{% endblock %}

{% block stylesheets  %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('plugs/album/style.css')}}">
{% endblock %}

{% block javascripts %}
    {{parent()}}
    
    {% endblock %}
{% block header_title %}
    Détails Mariage
{% endblock %}

{% block content %}
<div class="padding">
    <div class="block pl-5 pr-5 m-4">
    <div class="sous-block w-100">
        <img src="{{asset('plugs/mariage/hall.png')}}" class="img mrg-image" alt="">
        <h4 class="font-Great color-title-apart font-weight-bold pt-2 font-weight-bold mt-3 ml-3">{{ unMariage.NomHomme }} & {{ unMariage.NomFemme }}</h4>
    </div>
    <div class="sous-block w-75">
        <img src="{{asset('plugs/mariage/alarm.png')}}" class="img mrg-image" alt="">
        <h4 class="font-Great color-title-apart font-weight-bold pt-1 font-weight-bold mt-3 ml-3">{{ (lastFest is not empty) ? lastFest[0].NomFest : 'Aucune Festivité' }}</h4>
    </div>
    <div class="sous-block w-50">
        <img src="{{asset('plugs/mariage/camera.png')}}" class="img mrg-image" alt="">
        <h4 class="font-Great color-title-apart font-weight-bold pt-1 mt-3 ml-3">Album</h4>
    </div>
    </div>
    <div class="myAlbum">
    <div class="contenu_album p-2 w-75">
    {% if albums is not null %}
        {% for album in albums %}
            {% set extension = album.Nom|split('.') %}
            {% if extension[1] in extensionImage %}
              <div class="elem_album">
                <div class="cadre m-2">
                    <a href="{{asset('plugs/photo/albums/' ~ album.Nom)}}" data-lightbox="album" data-title="{{ album.Date | format_datetime('full','none') }}">
                        <img src="{{asset('plugs/photo/albums/' ~ album.Nom)}}" alt="" class="img img-thumbnail img-fluid">
                    </a>       
                </div>
             </div>  
            {% endif %}
        {% endfor %}  
    {% else %}
        <div class="elem_album">
            <div class="cadre m-2">
                <a href="{{asset('plugs/default.png')}}" data-lightbox="album" data-title="Insérer un album">
                    <img src="{{asset('plugs/default.png')}}" alt="" class="img img-thumbnail img-fluid">
                </a>       
            </div>
        </div>
    {% endif %}
    </div>
    <div class="option_album text-white text-left p-3 w-25 bg-grey">
        <label for="" class="color-description-apart font-Great font-weight-bold">Festivités</label>
        <select name="mariage" id="" class="custom-select mb-2">
            <option value="" disabled selected>Festivités</option>
            {% for festivite in allFestivites %}
                <option value="{{ festivite.id }}">{{ festivite.NomFest }}</option>
            {% endfor %}
        </select>
        <label for="" class="color-description-apart font-Great font-weight-bold mt-4 ">Type Contenu</label>
        <select name="mariage" id="" class="custom-select ">
            <option value="" disabled selected>Type Contenu</option>
            <option value="1">Album</option>
            <option value="2">Vidéo</option>
            <option value="3">Audio</option>
        </select>
        <button class="btn btn-warning font-weight-bold text-white btn-block mt-4"><i class="fas fa-eye"></i>&nbsp;&nbsp;Afficher</button>
    </div>
    </div>
</div>


{% endblock %}