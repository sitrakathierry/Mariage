{% extends 'base.html.twig' %}

{% block title %}Mariage{% endblock %}

{% block stylesheets  %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('plugs/mariage/style.css')}}">
{% endblock %}

{% block javascripts %}
    {{parent()}}
    
{% endblock %}
{% block header_title %}
    Mariage
{% endblock %}

{% block content %}

    <div class="container-fluid p-5">
        <form class="card ml-auto mr-auto mb-4  card-sm">
            <div class="card-body row no-gutters align-items-center">
            <div class="col-auto">
            <i class="fas fa-search h5 text-body"></i>
            </div>
            <div class="col">
            <input class="form-control form-control-md form-control-borderless" type="search" placeholder="Taper ici ">
            </div>

            <div class="col-auto">
            <button class="btn btn-md  btn-success pl-4 pr-4 " type="submit">Rechercher</button>
            </div>

            </div>
        </form>
        <div class="row">
        {% for mariage in mariage %}
            <div class="col-12 mt-5 col-md-2">
                <a href="{{path('app_detailMariage',{idMariage:mariage.id})}}">
                <div class="radius-30 border unMariage shadow-nons h-100 p-3 w-100 text-center ">
                    {% if mariage.PhotoMariee is not null %}
                        <img src="{{asset('plugs/photo/albums/' ~ mariage.PhotoMariee)}}" alt="" class="img rounded-circle">
                    {% else %}
                        <img src="{{asset('plugs/default.png')}}" alt="" class="img rounded-circle">
                    {% endif %}
                    
                    <h3 class="font-regular mt-3 font-weight-bold text-purple font-sm">{{ mariage.NomHomme }} & {{ mariage.NomFemme }}</h3>
                </div>
                </a>
            </div>
        {% endfor %}    
        </div>
    </div>
{% endblock %}
