{% extends 'base.html.twig' %}

{% block title %}Mariage{% endblock %}

{% block stylesheets  %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('plugs/mariage/style.css')}}">
{% endblock %}

{% block javascripts %}
    {{parent()}}
    
{% endblock %}
{% block header_title %}
    Mariage
{% endblock %}

{% block content %}

    <div class="container-fluid p-5">
        <div class="row">
        {% for mariage in mariage %}
            <div class="col-12 mt-5 col-md-2">
                <a href="{{path('app_detailMariage',{idMariage:mariage.id})}}">
                <div class="radius-30 border unMariage shadow-nons h-100 p-3 w-100 text-center ">
                    {% if mariage.PhotoMariee is not null %}
                        <img src="{{asset('plugs/photo/albums/' ~ mariage.PhotoMariee)}}" alt="" class="img rounded-circle">
                    {% else %}
                        <img src="{{asset('plugs/default.png')}}" alt="" class="img rounded-circle">
                    {% endif %}
                    
                    <h3 class="font-Monserrat text-purple h6 text-capitalize font-italic font-weight-bold mt-3">{{ mariage.NomHomme }} & {{ mariage.NomFemme }}</h3>
                </div>
                </a>
            </div>
        {% endfor %}    
        </div>
    </div>
{% endblock %}
