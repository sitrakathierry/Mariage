{% block header_title %}
    Actualités
{% endblock %}

{% block content %}
<div class="container-fluid mb-5">
    <div class="row">
    {% for actualite in actualites %}
        <div class="col-md-6 p-4">
            <form method="GET" action="{{path('details_actualite',{'id_actualite':actualite.id})}}">
                <div class="bloc_article container-fluid p-4 mt-4" value="{{ actualite.id }}">
                    <div class="row">
                        <div class="col-md-4 p-2 text-right">
                            <img src="{{asset('plugs/photo/albums/' ~ actualite.ImageActualite )}}" class="img image_article img-fluid" alt="">
                            <label class="date_article font-Roboto text-orange w-100 font-weight-bold h5 text-white py-2 pr-3 mt-1">
