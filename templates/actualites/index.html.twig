{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block stylesheets %}
{{ parent() }}
     <link rel="stylesheet" type="text/css" href="{{asset('plugs/actualites/css/style.css')}}">
    <!-- Responsive-->
    <link rel="stylesheet" href="{{asset('plugs/actualites/css/responsive.css')}}">
    <style>
    .g-banniere
        {
            background-image : url('{{asset('plugs/predefinie/images/news.jpg')}}') ;
            background-repeat : no-repeat ;
            background-size : cover ;
            background-position : center center ;
            height: 450px ;
        }
    </style>
{% endblock %}

{% block javascripts %}
{{ parent() }}

{% endblock %}

{% block header_title %}
    Actualités
{% endblock %}

{% block content %}
<div class="container mb-5">
    {% for actualite in actualites %}
    <div class="blog_section_2">
        <div class="row">
            <div class="col-md-6"> 
                <h6 class="date_text h6">{{ actualite.Date|date('d') }}<br>{{ actualite.Date|date('M') }}<br>{{ actualite.Date|date('Y') }}</h6>
                <div class="image_4"><img src="{{asset('plugs/photo/albums/' ~ actualite.ImageActualite )}}"></div>
            </div>
            <div class="col-md-6">
                <h3 class="liya_text font-regular">{{ actualite.Titre }}</h3>
                <p class="ipsum_text h4 size-normal">{{ actualite.Explication|raw  }}</p>
                <div class="text-right mt-4">
                <label for="" class="text-right font-italic ">{{ actualite.Auteur }}.</label>
                </div>
                <div class="follow_btn_main">
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
