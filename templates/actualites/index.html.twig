{% block title %}Actualités{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <style>
    .g-banniere
        {
            background-image : url('{{asset('plugs/predefinie/images/news.jpg')}}') ;
            background-repeat : no-repeat ;
            background-size : cover ;
            background-position : center center ;
            height: 450px ;
        }

        .bloc_article
        {
            width: 100%;
            height : 100% ;
        }

        .image_article
        {
            width: 100%;
            height : 200px ;
            object-fit : cover ;
        }
        .explication
        {
            height : auto;
        }

        .bloc_article:hover {
            box-shadow: 0px 0px 60px 4px #eeeeef;
            transform: translateY(-10px);
            cursor : pointer ;
        }
        .bg-orange
        {
            background-color : rgba(255, 85, 0, 1) !important;
        }
