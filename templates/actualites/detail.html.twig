{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block stylesheets %}
{{ parent() }}
     <link rel="stylesheet" type="text/css" href="{{asset('plugs/actualites/css/style.css')}}">
    <!-- Responsive-->
    <link rel="stylesheet" href="{{asset('plugs/actualites/css/responsive.css')}}">
    <style>
    .g-banniere
        {
            background-image : url('{{asset('plugs/predefinie/images/news.jpg')}}') ;
            background-repeat : no-repeat ;
            background-size : cover ;
            background-position : center center ;
            height: 450px ;
        }

        .bloc_article1
        {
            width: 100%;
            height : auto ;
            box-shadow: 0px 0px 60px 4px #eeeeef;
            transform: translateY(-10px);
        }

        .image_article
        {
            width: auto;
            height : auto ;
            object-fit : cover ;
        }
        .explication
        {
            height : auto;
        }

        .bg-orange
        {
            background-color : rgba(255, 85, 0, 1) !important;
        }
        .text-orange
        {
            color : rgba(255, 85, 0, 1) !important;
        }
    </style>
{% endblock %}

{% block javascripts %}
{{ parent() }}

{% endblock %}

{% block header_title %}
    Actualités
{% endblock %}

{% block content %}
<div class="container mb-5">
        <div class="bloc_article1 container-fluid p-4 mt-4" value="{{ actualite.id }}">
        <div class="row">
            <div class="col-md-12 p-2 text-center">
            <h2 class="liya_text font-Montserrat text-center mb-3">{{ actualite.Titre }}</h2>
                <img src="{{asset('plugs/photo/albums/' ~ actualite.ImageActualite )}}" class="img ml-auto mr-auto image_article img-fluid" alt="">
                <div class='text-center'>
                 <label class="date_article font-Roboto text-orange w-100 font-weight-bold h5 text-white py-2 pr-3 mt-1">
                    {{ actualite.Date|date('d') }}&emsp;{{ actualite.Date|date('M') }}&emsp;{{ actualite.Date|date('Y') }}
                </label>
            </div>
               
            </div>
            <div class="col-md-12">
                <div class="w-100 text-truncate text-wrap p-4 explication">
                    <p>{{ actualite.Explication|raw  }}
                     </p></a>
                </div>
                <div class="text-right w-100 mt-4">
                <label for="" class="text-right font-italic ">{{ actualite.Auteur }}.</label>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
