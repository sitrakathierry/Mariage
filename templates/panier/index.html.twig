{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block stylesheets  %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{parent()}}

{% endblock %}

{% block header_title %}
    Panier
{% endblock %}

{% block content %}
    <div class="p-5">
        <div class="table-responsive">
            <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                    <th>Type</th>
                    <th>Designation</th>
                    <th>Prix</th>
                    <th>Qte</th>
                    <th>Total (KMF)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% set totalP = 0 %}
            {% set totalG = 0 %}

            {% for panier in panier %}
                {% set totalP = panier.IdCategorie.IdPrix * panier.quantite %}
                <tr>
                    <td>{{ panier.IdCategorie.IdTypeOffre.Nom }}</td>
                    <td>{{ panier.IdCategorie.Nom }}</td>
                    <td>{{ panier.IdCategorie.IdPrix }} KMF</td>
                    <td>{{ panier.quantite }} </td>
                    <td>{{ totalP }} </td>
                    <td><button class="btn btn-danger supprPanier btn-block"><i class="fa text-white fa-trash"></i></button></td>
                </tr>
                {% set totalG = totalG + totalP %}
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4">Total General</th>
                    <th>{{ totalG }}</th>
                    <td></td>
                </tr>
            </tfoot>
            </table>
        </div>
        <div class="w-100 text-right mt-5">
            <button class="btn btn-success pl-5 pr-5">Commander</button>
        </div>
    </div>
{% endblock %}
